---
import LinkIcon from "@/assets/icons/akar-icons--link-out.svg";
const { name, href, title, description, icon: Icon, accent } = Astro.props;
---

<a
  href={href}
  title={title}
  target="_blank"
  rel="noreferrer"
  class={`group relative flex flex-row items-center justify-start gap-4 rounded bg-stone-900 p-4 transition-all ease-in-out hover:bg-stone-800 hover:ring-2 hover:ring-stone-700 hover:ring-offset-stone-900`}
>
  <LinkIcon
    class="absolute top-2 right-2 size-4 opacity-10 transition-opacity ease-in-out group-hover:opacity-35"
  />
  <Icon class={`size-12 ${accent} rounded p-2`} />
  <div class="flex flex-col justify-center">
    <span class="text-lg font-semibold">{name}</span>
    <span class="text-sm text-stone-400">{description}</span>
  </div>
</a>
